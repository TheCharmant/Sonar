{
  "type": "module",
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "create-admin": "node src/scripts/createAdminUser.js",
    "dev:server": "nodemon src/server.js",
    "dev:client": "cd ../client && npm run dev",
    "dev:admin": "cd ../admin && npm run dev",
    "dev:all": "concurrently --prefix-colors \"bgGreen.bold,bgBlue.bold,bgMagenta.bold\" --prefix \"[{time}] [{name}]\" --timestamp-format \"HH:mm:ss\" --names \"SERVER,CLIENT,ADMIN\" --kill-others \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:admin\"",
    "dev:open": "node scripts/start-and-open.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.8.2",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase-admin": "^13.2.0",
    "googleapis": "^148.0.0",
    "jsonwebtoken": "^9.0.0",
    "open": "^9.1.0",
    "readline": "^1.3.0",
    "resend": "^4.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9"
  }
}
